      <div class="col-sm-3" style=" padding: 10px; margin-top: 50px;" overflow-x: hidden;>
        <div class="col-lg-12">
          <% include ../partials/adminpanel %>
        </div>
      </div>
      <div class="container" style="margin-bottom: 2%;">
      <div class="col-sm-6">
        <div class="container">
