                      <% } %>
                  </div>
                </div>
                <div class="container">
                  <div class="row">
                    <form action="/manage/<%= pending._id %>" method="POST">
                      <div class="col-md-4 " style="margin-top: 20px;">
                        <div class="form-group ">
