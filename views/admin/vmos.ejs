<% layout("layout") -%>
    <div id="particles-js"></div>
    <div class="col-sm-3" style=" padding: 10px; margin-top: 50px;" overflow-x: hidden;>
        <div class="col-lg-12">
            <% include ../partials/adminpanel %>
        </div>
    </div>
    <div class="container" style="padding-bottom: 2%;">
    <div class="col-sm-6">
        <div class="container">
            <div class="panel panel-info col-sm-9" id="myScrollspy" style=" padding: 0px; padding-bottom: 2% !important; margin-top: 80px; height:auto;">
                <div class="panel-heading" style="color: #ffffff;">

                    Vision and Mission

                </div>
                <br>
                <center>
                    <form action="/vmos" method="POST">
                        <div class="form-group" style="padding: 5px;">
                            <label for="content" style="color:black;  text-align: center">Vision:</label>
                            <textarea style="width:100%; height: 200px; overflow-y: scroll;" placeholder="Write a content..." name="vision" class="form-control" id="vision">

                                <%= visionmission.slice(-1)[0].vision %>
                            </textarea>
                        </div>
                        <div class="form-group" style="padding: 5px;">
                            <label for="content" style="color:black; text-align: center">Mission:</label>
                            <textarea style="width:100%; height: 200px; overflow-y: scroll;" placeholder="Write a content..." name="mission" class="form-control" id="mission">

                                <%= visionmission.slice(-1)[0].mission %>
                            </textarea>

                        </div>
                        <div class="form-group" style="padding: 5px;">
                            <label for="content" style="color:black; text-align: center">Philosophy:</label>
                            <textarea style="width:100%; height: 200px; overflow-y: scroll;" placeholder="Write a content..." name="philosophy" class="form-control" id="philosophy">

                                <%= visionmission.slice(-1)[0].philosophy %>
                            </textarea>

                        </div>
                        <div class="form-group" style="padding: 5px;">
                            <label for="content" style="color:black; text-align: center">Objectives:</label>
                            <textarea style="width:100%; height: 200px; overflow-y: scroll;" placeholder="Write a content..." name="objectives" class="form-control" id="objectives">

                                <%= visionmission.slice(-1)[0].objectives %>
                            </textarea>

                        </div>
                        <div style="text-align: right;" style="padding: 5px;">
                            <button style="width: 100px;" class="btn btn-primary">
                                Post</button>
                            <button onClick="discard()" type="button" style="width: 100px; margin-right:5px;" class="btn btn-danger">
                                Discard</button>
                        </div>
                    </form>
            </div>
        </div>
        <div>
        </div>
    </div>
    </div>
    </div>
    </div>