
<% layout("layout") -%>
  <div class="container messageus">
    <div class="container" style="width: 80%;">
      <div class="row">
        <div class="col-lg-12" style="padding-top: 5%;">
          <h1 class="page-title" style="color: #ffffff;">
            M E S S A G E&nbsp&nbspU S
          </h1>
          <br>
        </div>
      </div>
    </div> 
      <div class="container">
      <div class="col-sm-12" style="padding-right: 8%; left: 10%; right: 10%; width: 81.5%;">
      
      <form action="/sendmessage" method="POST">
            <div class="form-group" style="padding: 5px;">
            
            <div class="form-group" style="padding: 5px; padding-top: 0px;">
              <label for="title" style=" color: #ffffff;">Email:</label>
              <input placeholder="Write your email address...." type="Email" name="email" class="form-control" id="email" required="">
            </div>  
            <div class="form-group" style="padding: 5px;">
              <label for="title" style=" color: #ffffff;">Subject:</label>
              <input placeholder="Write the subject...." type="text" name="subject" class="form-control" id="title" required="">
            </div>
            <div class="form-group" style="padding: 5px;">
              <label for="content" style=" color: #ffffff;">Content:</label>
              <textarea style="width: 80% !important; height: 300px;" placeholder="Write your message content..." name="content" class="form-control" id="content" required=""></textarea>
            </div>

            <div style="text-align: left;" style="padding: 5px;">
              <button style="width: 100px;" class="btn btn-primary">
                Post</button>
              <button onClick="discard()" type="button" style="width: 100px; margin-right:5px;" class="btn btn-danger">
                Discard</button>
            </div>
          </form>
          </div>
          </div>
      </div>
      </div>

      <script type="text/javascript">
      function discard() {
      document.getElementById("title").value = "";
      document.getElementById("email").value = "";
      tinyMCE.activeEditor.setContent("");
      }
      </script>