<% if(errors && errors.length >0){ %>
  <div class="alert alert-danger alert-dismissible" style="position: absolute;
  top: 10%;
  right: 35%;
  height: 100px;
  width: 400px;
  z-index: 99;">
    <button type="button" class="close" id="btn" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>

    </button>

    <br>
    <%= errors %>
  </div>
  <% } %>
    <% layout("layout") -%>
      
<div class="register">
        <div class="container">
          <div class="row">
            <div class="col-lg-12" style="padding-top: 5%;">
              <h1 class="page-title" style="color: #ffffff;">
                R E G I S T R A T I O N
              </h1>
              <br>
            </div>
          </div>
          <div class="container">
            <div class="col-sm-6" style="padding-right: 8%;">
            <p>Register now and be a part of our growing community! After filling up and submitting the necessary details, follow these admission procedures to become an official Sunbeamer.</p>
            <br>
            <p><span class="glyphicon glyphicon-triangle-right"></span>
                Fill out the registration form on this page for your account to be processed.
            </p>
            <p><span class="glyphicon glyphicon-triangle-right"></span>
                Download the admission form below.
            </p>
            <p><span class="glyphicon glyphicon-triangle-right"></span>
                Fill up the admission form and prepare the necessary documents indicated in the form.
            </p>
            <p><span class="glyphicon glyphicon-triangle-right"></span>
                Submit your form at the office of the registrar along with the required documents.
            </p>
            <br><br>
            <a href="https://drive.google.com/open?id=19nxvoB0xSpx1ggOBm2NoqjtsVb7vweiB">
                      <button type="button" class="btn btn-primary animated bounce" style="display:block; border: 1px solid #020531; border-radius: 3px; width: 100%; margin-left: -0.1%; animation-iteration-count: 4">
                        <span class="fa fa-download"></span> Download Admission Form</button>
                    </a>
            </div>
            <div class="container" id="reg-info">
                <div class="col-sm-6">


                    <br>
                    <form id="register-data" action="/register" method="POST" style="width:80%;">
                    <select onchange="student()" name="neworold" id="neworold" class="tbox">
                      <option value="new" style="color: #000000">New Student</option>
                      <option value="old" style="color: #000000">Old Student</option>
                    </select>
                      <div class="form-group" id="stno" style="display: none">
                        <label for="pwd">Student no:</label>
                        <input type="number" class="form-control tbox" name="stuno" id="stuno">
                      </div>
                      <div class="form-group">
                        <label for="pwd">First Name:</label>
                        <input style="text-transform: capitalize;" type="text" class="form-control tbox" name="firstName" id="fname" required="">
                      </div>
                      <div class="form-group">
                        <label for="pwd">Last Name:</label>
                        <input style="text-transform: capitalize;" type="text" class="form-control tbox" name="lastName" id="lname" required="">
                      </div>
                      <div class="form-group">
                        <label for="pwd">Middle Name:</label>
                        <input style="text-transform: capitalize;" type="text" class="form-control tbox" name="middleName" id="mname" required="">
                      </div>
                      
                      <label>Birthdate: </label>
                      <div class="form-group">
                        <select class="btn btn-default tbox" onchange="agecalculator()" name="month" id="month">
                          <option value="01">January</option>
                          <option value="02">February</option>
                          <option value="03">March</option>
                          <option value="04">April</option>
                          <option value="05">May</option>
                          <option value="06">June</option>
                          <option value="07">July</option>
                          <option value="08">August</option>
                          <option value="09">September</option>
                          <option value="10">October</option>
                          <option value="11">November</option>
                          <option value="12">December</option>
                        </select>
                        <select class="btn btn-default tbox" onchange="agecalculator()" name="day" id="day">

                        </select>
                        <select class="btn btn-default tbox" onchange="agecalculator()" name="year" id="year">
                        </select>
                      </div>
                      <div class="form-group" style="display: none">
                        <label for="pwd">Age:</label>
                        <input type="number" min="0" class="form-control tbox" name="age" id="age" required="">
                      </div>
                      <div class="form-group">
                        <label for="pwd">Age:</label>
                        <input type="text" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" min="0" class="form-control tbox" name="age2" id="age2" maxlength="0" required="">
                      </div>
                      <div class="form-group">
                        <label for="pwd">Address:</label>
                        <input type="text" class="form-control tbox" name="address" id="address" required="">
                      </div>
                      <div class="form-group">
                        <label for="pwd">Email Address:</label>
                        <input type="Email" class="form-control tbox" name="email" id="emailadd" required="">
                      </div>
                      <div class="form-group">
                        <label for="">Gender:</label><br>
                        <label class="radio-inline" style="margin-left: 1%;">
                          <input type="radio" id="gender" name="gender" value="female" required="">Female
                        </label>
                        <label class="radio-inline" style="margin-left: 2%;">
                          <input type="radio" id="gender" name="gender" value="male" required="">Male
                        </label>
                      </div>

                      <div class="form-group">
                        <label for="pwd">Contact Number:</label>
                        <input oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" type="number"
                          maxlength="11" class="form-control tbox" name="contact" id="contact" required="">
                      </div>

                      <button class="btn btn-primary" style="border: 1px solid #020531; border-radius: 3px; width: 100%; margin-left: -0.1%; margin-bottom: 10%;">
                        <span class="fa fa-list-alt"></span> Register</button>
                    </form>
                    </div>
                    </div>
                    <br>
                    <% if(success && success.length >0){ %>
                      <div class="alert alert-success alert-dismissible" style="position: absolute; top: 10%;
                      right: 35%;
                      height: 100px;
                      width: 400px;
                      z-index: 99;"">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                        <%= success %>
                      </div>
                      <% } %>

                  


                  

                
              </div>

            </div>
          </div>
        </div>
        </div>
</div>

        
        <script>
          function student() {
            if (document.getElementById("neworold").value === "old") {
              document.getElementById("stno").style.display = ""
            } else {
              document.getElementById("stno").style.display = "none"
            }
          }
          for (var i = (new Date).getFullYear(); i >= 1905; i--) {
            $("#year").append('<option value="' + i + '">' + i + '</option>');
          }
          for (var i = 31; i >= 1; i--) {
            $("#day").append('<option value="' + i + '">' + i + '</option>');
          }
          var delay = 2000;
          window.onload = function () {
            setTimeout(myfunction, delay)
            // document.getElementById("btn").click();

          };

          function myfunction() {
            document.getElementById("btn").click();
          }

          function calculate_age(dob) {

            var diff_ms = Date.now() - dob.getTime();
            var age_dt = new Date(diff_ms);

            return Math.abs(age_dt.getUTCFullYear() - 1970);
          }

          function agecalculator() {
            var year = document.getElementById("year").value;
            var month = document.getElementById("month").value;
            var day = document.getElementById("day").value;
            var age = document.getElementById("age");
            var totalAge = calculate_age(new Date(year, month, day));
            age.value = totalAge;
            document.getElementById("age2").value = totalAge;

          }
        </script>